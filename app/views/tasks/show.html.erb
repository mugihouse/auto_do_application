<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h1 class="text-4xl font mt-4">タスク詳細</h1>
    </div>
      <div class="col-5 offset-1 text-center">
        <%= Task.human_attribute_name(:title) %>
      </div>
      <div class="col-5 text-center">
        <%= @task.title %>
      </div>
      <div class="col-5 offset-1 text-center">
        <%= Task.human_attribute_name(:body) %>
      </div>
      <div class="col-5 text-center">
        <%= @task.body %>
      </div>
      <div class="col-5 offset-1 text-center">
        <%= Task.human_attribute_name(:time_required) %>
      </div>
      <div class="col-5 text-center">
        <%= @task.time_required_i18n %>
      </div>
      <div class="text-end mb-3">
        <%= link_to t('defaults.edit'), edit_task_path(@task), class: 'btn btn-primary me-3' %>
      </div>
  </div>
</div>
