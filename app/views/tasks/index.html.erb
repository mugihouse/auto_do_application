<div class="container pt-3">
  <div class="row">
    <div class="col-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="col-8">
              <%= Task.human_attribute_name(:title) %>
            </th>
            <th class="col-4">
              <%= Task.human_attribute_name(:time_required) %>
            </th>
          </tr>
        </thead>
        <tbody>
          <%= render @tasks %>
        </tbody>
      </table>
    </div>
  </div>
</div>
